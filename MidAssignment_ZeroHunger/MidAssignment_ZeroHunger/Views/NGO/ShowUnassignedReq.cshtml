@model IEnumerable<MidAssignment_ZeroHunger.DTOs.CollectRequestDTO>

@{
    ViewBag.Title = "ShowUnassignedReq";
}

@if (TempData["Msg"] != null)
{
    <span class="alert alert-success">@TempData["Msg"]</span>
}

<h2>Show Unassigned Requests</h2>

<table class="table" border="1">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CollectReqId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Food_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Food_Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Food_Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Preservation_Time)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Request_Time)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employee_Status)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CollectReqId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Food_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Food_Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Food_Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preservation_Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Request_Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee_Status)
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Assign Employee", "AssignEmployee", "NGO", null, new { @class = "btn btn-primary" })
</p>
<div>
    @Html.ActionLink("Go to Dashboard", "Dashboard")
</div>
